INSTALL = @INSTALL@
RM = @RM@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

BINARY = msim

.PHONY: all install uninstall clean distclean rvtest

all:
	$(MAKE) -C src

install: all
	$(INSTALL) -d $(DESTDIR)$(bindir)
	$(INSTALL) -s -m 755 $(BINARY) $(DESTDIR)$(bindir)/$(BINARY)

uninstall:
	$(RM) -f $(DESTDIR)$(bindir)/$(BINARY)

clean:
	$(MAKE) -C src clean
	$(MAKE) -C tests/rvtests/unit-tests clean

distclean: clean
	$(MAKE) -C src distclean
	$(MAKE) -C tests/rvtests/unit-tests distclean
	$(RM) -f Makefile config.log config.status config.h stamp-h

rvtest:
	$(MAKE) -C src rvtest
